{
  "name": "@ghentcdh/tools/api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/tools/form-api/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [
    "scope:tool",
    "scope:api"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/tools/form-api",
        "tsConfig": "libs/tools/form-api/tsconfig.lib.json",
        "packageJson": "libs/tools/form-api/package.json",
        "main": "libs/tools/form-api/src/index.ts",
        "assets": [
          "libs/tools/form-api/*.md"
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
