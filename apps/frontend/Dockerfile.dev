# frontend/Dockerfile.dev (Development with hot reload)

FROM node:24-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

ENV CI=true
ENV VERSION=local-development

# Copy ghentcdh linked packages
COPY ghentcdh/ /ghentcdh/

# Copy package files
COPY Mela/package.json Mela/pnpm-lock.yaml Mela/pnpm-workspace.yaml ./
COPY Mela/apps/frontend/package.json ./apps/frontend/
COPY Mela/libs/text/api/package.json ./libs/text/api/
COPY Mela/generated/ ./generated/

# Install dependencies (including dev dependencies)
RUN pnpm install

# Copy entrypoint script
COPY Mela/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh
# Expose Vite dev server port

EXPOSE 9000

# Start Vite dev server with hot reload
# --host 0.0.0.0 allows access from outside container

CMD pnpm exec nx serve frontend --host 0.0.0.0
