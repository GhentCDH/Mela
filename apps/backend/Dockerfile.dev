FROM node:24-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

ENV CI=true

# Copy ghentcdh linked packages
COPY ghentcdh/ /ghentcdh/

# Copy package files
COPY Mela/package.json Mela/pnpm-lock.yaml Mela/pnpm-workspace.yaml ./
COPY Mela/apps/backend/package.json ./apps/backend/
COPY Mela/libs/text/api/package.json ./libs/text/api/
COPY Mela/generated/ ./generated/

# Install dependencies (including dev dependencies)
RUN pnpm install

# Copy entrypoint script
COPY Mela/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Expose port
EXPOSE 3000

ENV SERVICE=backend
# Start with hot reload (NestJS watch mode)

CMD pnpm exec nx serve backend --host 0.0.0.0
