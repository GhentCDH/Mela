{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["app:api"],
  "// targets": "to see all targets run: nx show project backend --web",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["generated-types:build", "generated-forms:build"],
      "outputs": ["{workspaceRoot}/dist/apps/backend"],
      "options": {
        "commands": ["cd apps/backend && vite build"]
      },
      "configurations": {
        "production": {}
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite",
        "cwd": "apps/backend"
      }
    }
  }
}
